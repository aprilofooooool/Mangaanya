<Window x:Class="Mangaanya.Views.FolderSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="移動先フォルダの選択" 
        Width="500"
        Height="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        FontSize="12">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 説明テキスト -->
        <TextBlock Grid.Row="0"
                   Text="ファイルの移動先フォルダを選択してください："
                   FontSize="12"
                   Margin="0,0,0,10"/>
        
        <!-- フォルダリスト -->
        <Border Grid.Row="1"
                BorderBrush="Gray"
                BorderThickness="1"
                Margin="0,0,0,15">
            <ListBox x:Name="FolderListBox"
                     ItemsSource="{Binding FolderItems}"
                     SelectedItem="{Binding SelectedFolder, Mode=TwoWay}"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Margin="2">
                            <TextBlock Text="{Binding FolderName}" 
                                       TextWrapping="Wrap" 
                                       FontWeight="Bold"
                                       FontSize="12"/>
                            <StackPanel Orientation="Horizontal" Margin="0,1,0,0">
                                <TextBlock Text="{Binding StatisticsText}" 
                                           FontSize="10" 
                                           Foreground="Gray"/>
                                <TextBlock Text=" - " 
                                           FontSize="10" 
                                           Foreground="Gray" 
                                           Margin="4,0"/>
                                <TextBlock Text="{Binding FolderPath}" 
                                           FontSize="10" 
                                           Foreground="DarkGray" 
                                           TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="1"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="LightBlue"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="CornflowerBlue"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Border>
        
        <!-- ボタン -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="OkButton"
                    Content="OK"
                    Width="80"
                    Height="30"
                    Margin="0,0,10,0"
                    IsDefault="True"
                    IsEnabled="{Binding IsOkButtonEnabled}"
                    Click="OkButton_Click"/>
            <Button x:Name="CancelButton"
                    Content="キャンセル"
                    Width="80"
                    Height="30"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>